@{
  Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
  ViewData["Title"] = "Pizza Type Sales";
}

@model List<PizzaTypeSales>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Pizza Type</th>
      <th scope="col">Total Sales</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in @Model)
    {
      <tr>
        <td>@item.Name</td>
        <td>$@item.CostPerType</td>
    </tr>
    }
  </tbody>
</table>